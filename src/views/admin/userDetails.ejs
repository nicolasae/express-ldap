<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head', {title : 'Detail of user' }) %>

    <body class="admin-body">
        <%- include('../components/navBar') %>
        <div class="">
            <div class="row">
                <%- include('../components/sideBarMenu') %>
                <main class="col-md-10 ms-sm-auto col-lg-11 px-md-4">
                    <div class="title-admin">
                        <h1>Detalle de <%= users.name %></h1>                        
                    </div>

                    <section>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input 
                                type="text" 
                                id="name"
                                class="form-control" 
                                name="name"
                                value="<%= users.name %>"
                                required>
                        </div>
                        <div class="mb-3">
                          <label for="email" class="form-label">Email address</label>
                          <input 
                            type="email" 
                            id="email" 
                            class="form-control" 
                            name="email"
                            value="<%= users.email %>"
                            required>
                        </div>
                        <div class="mb-3 form-check form-switch">
                            <% if (users.idRole === 1) { %>
                                <input 
                                    type="checkbox"
                                    id="idRole"
                                    role="switch"
                                    class="form-check-input"
                                    name="idRole"
                                    checked
                                    disabled
                                >
                            <% } else { %>
                                <input 
                                    type="checkbox"
                                    id="idRole"
                                    class="form-check-input"
                                    name="idRole"
                                    role="switch"
                                    disabled
                                >
                            <% } %> 
                          <label class="form-check-label" for="idRole">Super Admin</label>
                        </div>
                    </section>
                </main>
            </div>
        </div>

    </body>

</html>