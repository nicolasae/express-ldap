<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head', {title : 'List of users' }) %>

    <body class="admin-body">
        <%- include('../components/navBar') %>
        <div class="">
            <div class="row">
                <%- include('../components/sideBarMenu') %>
                <main class="col-md-10 ms-sm-auto col-lg-11 px-md-4">
                    <% if (locals.active && locals.active === 'create') { %>
                        <div class="title-admin">
                            <h1>Agregar </h1>
                        </div>
                    <% } else { %>
                        <div class="title-admin">
                            <h1>Editar</h1>
                        </div>
                    <%} %>
                    <form class="create-form" action="/admin/usuarios/nuevo" method="post" id="create-user-form">

                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input 
                                type="text" 
                                id="name"
                                class="form-control" 
                                name="name"
                                value=""
                                required>
                        </div>
                        <div class="mb-3">
                          <label for="email" class="form-label">Email address</label>
                          <input 
                            type="email" 
                            id="email" 
                            class="form-control" 
                            name="email"
                            required>
                        </div>
                        <div class="mb-3 form-check form-switch">
                            <input 
                                type="checkbox"
                                id="idRole"
                                class="form-check-input"
                                name="idRole"
                                role="switch"
                            >
                          <label class="form-check-label" for="idRole">Super Admin</label>
                        </div>

                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <button type="submit" class="btn btn-outline-institucional">Crear</button>
                            <!-- <button type="button" class="btn btn-outline-institucional">Crear y agregar otro</button> -->
                        </div>
                    </form>
                </main>
            </div>
        </div>

    </body>

</html>