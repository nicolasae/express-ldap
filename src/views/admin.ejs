<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head', {title : 'User Profile' }) %>

    <body class="admin-body">
        <%- include('./components/navBar') %>

        <div class="">
            <div class="row">
                <%- include('./components/sideBarMenu') %>


                <main class="col-md-10 ms-sm-auto col-lg-11 px-md-4">
                     <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1>Bienvenido <%= infoUserLogged.name %>!</h1>
                    </div>
                    
                    <div class="card text-center">
                        <div class="card-header">
                          Users
                        </div>
                        <div class="row">
                    
                            <% if (infoUserLogged.idRole === 1) {%> 
                                <div class="col-4">
                                    <div class="card-body">
                                        <a href="/admin/usuarios" class="btn btn-institucional">
                                            <i class="bi bi-list-task"></i>
                                            List
                                        </a>
                                    </div>                            
                                </div>
                                   
                                <div class="col-4">
                                    <div class="card-body">
                                        <a href="/admin/usuarios/nuevo" class="btn btn-institucional">
                                            <i class="bi bi-plus-square-fill"></i>
                                            Add
                                        </a>
                                    </div>
                                </div>
                    
                                <div class="col-4">
                                    <div class="card-body">
                                        <a href="/admin/usuarios/nuevo" class="btn btn-institucional">
                                            <i class="bi bi-pencil-square"></i>
                                            Edit  
                                        </a>
                                    </div>
                                </div>
                            <%}  else {%>  
                                <div class="col-12">
                                    <div class="card-body">
                                        <a href="/admin/usuarios" class="btn btn-institucional">
                                            <i class="bi bi-list-task"></i>
                                            List
                                        </a>
                                    </div>                            
                                </div>
                            <%} %>
                                                                                
                        </div>
                    </div>
                    
                </main>
            </div>
        </div>
    </body>

</html>