<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title : 'Express App' }) %>

    <body>
        <%- include('../partials/header') %>

        <main id="contenido" class="cuerpo-contenido">
            <div class="cuerpo">
                <div class="row cuerpoCont">
                    <section class="d-flex justify-content-center">
                        <div class="access-panel row col-12">
                            <div class="col-12 text-center login">
                                <div class="col-12 login">
                                    <div class="form-block">
                                        <div class="form-container">
                                            <form class="form-horizontal" action="/users/login" method="post" id="demo-form">
                                                <div class="form-group">
                                                    <label for="username">Usuario</label>
                                                    <input 
                                                        type="text"
                                                        id="username"
                                                        class="form-control"
                                                        name="username"
                                                        value=""
                                                        placeholder="Ingrese el nombre de usuario"
                                                        required>
                                                    <label for="password">Contraseña</label>
                                                    <input
                                                        type="password"
                                                        id="password"
                                                        class="form-control"
                                                        name="password"
                                                        placeholder="Ingrese la contraseña"
                                                        required>
                                                </div>
                                                <div class="btn-institucional mt-4">
                                                    <button 
                                                        type="submit"
                                                        class="btn-submit center-block"
                                                        >
                                                        Ingresar
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>
    </body>

</html>